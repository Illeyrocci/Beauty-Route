<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_back">

    <ImageView
        android:id="@+id/image_favourite"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:contentDescription="@string/user_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_profile" />

    <TextView
        android:id="@+id/name_favourite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:ellipsize="end"
        android:lines="1"
        android:textSize="@dimen/medium_text"
        app:layout_constraintBottom_toTopOf="@id/services_favourite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_favourite"
        app:layout_constraintTop_toTopOf="@id/image_favourite"
        tools:text="Banya liza" />

    <TextView
        android:id="@+id/services_favourite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/grey"
        android:textSize="@dimen/small_text"
        app:layout_constraintBottom_toBottomOf="@id/image_favourite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_favourite"
        app:layout_constraintTop_toBottomOf="@id/name_favourite"
        tools:text="usluga1 usluga2 usluga3" />

</androidx.constraintlayout.widget.ConstraintLayout>